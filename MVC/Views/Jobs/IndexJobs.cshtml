@model IEnumerable<MVC.Models.Jobs>
@{
    ViewBag.Title = "Jobs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("View All Jobs", "IndexJobs", "Jobs")</li>
        <li>@Html.ActionLink("Add the Jobs", "CreateJobs", "Jobs")</li>

    </ul>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.JobID)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.JobDescription)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Position)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Salary)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.ExperienceRequired)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.NoOfPositions)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Location)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Status)</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.JobID)</th>
                <td>@Html.DisplayFor(modelItem => item.JobDescription)</td>
                <td>@Html.DisplayFor(modelItem => item.Position)</td>
                <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                <td>@Html.DisplayFor(modelItem => item.ExperienceRequired)</td>
                <td>@Html.DisplayFor(modelItem => item.NoOfPositions)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.ActionLink("Update the Jobs", "EditJobs", new { id = item.JobID })</td>
                <td>@Html.ActionLink("Delete the Jobs", "DeleteJobs", new { id = item.JobID })</td>

            </tr>

        }
    </tbody>
</table>



